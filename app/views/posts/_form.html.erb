<h1>Post Form</h1>

<%= form_for post do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />

    <%= f.label :content %><br />
    <%= f.text_area :content %><br />
    
    <%= f.label :category_ids, 'Categories' %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br />

    <%= f.fields_for :categories, post.categories.build do |cat_fields| %>
        <%= cat_fields.label :name, 'New Category' %><br />
        <%= cat_fields.text_field :name %>    
    <% end %>
    <br />
    <br />

    <%= f.submit %>
<% end %>